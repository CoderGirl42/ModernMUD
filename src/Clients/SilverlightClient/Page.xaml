<UserControl x:Class="SilverlightApplication1.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="600" Height="400">
    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel Orientation="Vertical">
            <TextBox Name="txtOutput" Height="374" Background="Black" Foreground="White" IsReadOnly="True" VerticalScrollBarVisibility="Auto"></TextBox>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="txtInput" Width="520" Text="Type Here" TextChanged="OnTextChanged" AcceptsReturn="True"></TextBox>
                <Button Name="btnConnect" Content="Connect" Width="80" Click="btnConnect_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
