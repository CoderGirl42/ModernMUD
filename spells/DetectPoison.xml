  </Negates>
  <Modifies />
  <Duration>oneHourPerlevel</Duration>
  <Detrimental>false</Detrimental>
  <CanBeScribed>true</CanBeScribed>
  <StackingType>addDuration</StackingType>
  <Code>
    Object obj = (Object)target;

    if( obj.ItemType == ObjTemplate.ObjectType.drink_container || obj.ItemType == ObjTemplate.ObjectType.food )
    {
        if( obj.Values[ 3 ] != 0 )
        ch.SendText( "You smell poisonous fumes.\r\n" );
        else
        ch.SendText( "It looks very delicious.\r\n" );
    }
    else
    {
        ch.SendText( "It doesn't look poisoned.\r\n" );
    }

    return;
  </Code>
  <DamageInflicted>none</DamageInflicted>
  <SavingThrowEffect>halfDamageNoAffects</SavingThrowEffect>
